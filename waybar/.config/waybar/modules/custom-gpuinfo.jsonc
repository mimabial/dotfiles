{
  "custom/gpuinfo": {
    "justify": "right",
    "align": 0,
    "exec": "hyprshell gpuinfo",
    "return-type": "json",
    "interval": 5,
    "tooltip": true,
    "on-click": "hyprshell gpuinfo --toggle",
    "menu": "on-click-right",
    "menu-file": "$XDG_CONFIG_HOME/waybar/menus/gpuinfo.xml",
    "menu-actions": {
      "toggle": "hyprshell gpuinfo --toggle",
      "reset": "hyprshell gpuinfo --reset"
    }
  }
}
