{
  "custom/language": {
    "exec": "hyprctl -j devices | jq -r '.keyboards[] | select(.main == true) | .active_keymap' | cut -c1-2 | tr '[:lower:]' '[:upper:]'",
    "interval": 5,
    "format": "{}",
    "on-click": "denv-shell keyboardswitch",
    "tooltip": true,
    "exec-tooltip": "echo 'Current layout: '$(hyprctl -j devices | jq -r '.keyboards[] | select(.main == true) | .active_keymap' 2>/dev/null)"
  }
}
